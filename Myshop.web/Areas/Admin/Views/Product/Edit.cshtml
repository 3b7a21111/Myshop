@model ProductVM
@{
	ViewBag.CardTitle = "Edit Product";
	ViewBag.PageTitle = "Product Management";
}


<div class="row">
	<div class="col-md-4">
		<form method="post" asp-action="Edit" enctype="multipart/form-data">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="Product.Id" />
			<input type="hidden" asp-for="Product.Image" />
			<div class="form-group">
				<label asp-for="Product.Name" class="control-label"></label>
				<input asp-for="Product.Name" class="form-control" />
				<span asp-validation-for="Product.Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Product.Description" class="control-label"></label>
				<input asp-for="Product.Description" class="form-control" />
				<span asp-validation-for="Product.Description" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Product.Price" class="control-label"></label>
				<input asp-for="Product.Price" class="form-control" />
				<span asp-validation-for="Product.Description" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Product.Image" class="control-label"></label>
				<input type="file" name="file" id="imgfile" class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="Product.CategoryId" class="control-label"></label>
				<select asp-for="Product.CategoryId" asp-items="Model.CategoryIds" class="form-control">
					<option selected disabled>-- Select Category --</option>
				</select>
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-success" />
			</div>
		</form>

	</div>
	<div class="col-md-4">
		
		<div class="container">
			<img id="ImagePreview" src="~/@Model.Product.Image" width="300" height="300" />
		</div>
	</div>
</div>
<div>
	<a asp-action="Index">Back to Index</a>

</div>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}